generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// ModÃ¨le Utilisateur
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // ðŸ‘‡ AJOUTE CETTE LIGNE (Relation)
  reservations  Reservation[]
}

// ðŸ‘‡ AJOUTE TOUT CE BLOC (Nouveau modÃ¨le)
model Reservation {
  id          String   @id @default(cuid())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  movieId     String
  movieTitle  String
  cinema      String
  showTime    String
  seats       String
  totalPrice  Int
  
  createdAt   DateTime @default(now())
}